{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "paths": {
    //   "@/*": ["src/*"],
    //   "@/components/*": ["./src/components/*"]
    //   // "@components/*": ["./src/components/*"],
    //   // "@/lib/*": ["lib/*"],
    //   // "@/utils/*": ["utils/*"]
    // }
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["components/*"]
      // "@/components/*": ["components/*"],
      // "@/lib/*": ["lib/*"],
      // "@/utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
